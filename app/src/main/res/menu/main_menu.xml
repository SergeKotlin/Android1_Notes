<?xml version="1.0" encoding="utf-8"?>
<menu xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- title - самый обязательный здесь пункт, id не столь важен -->
    <!-- Чтобы меню работало - подключить в main_activity onCreateOptionsMenu() -->
    <!-- А чтобы научиться обрабатывать нажатия меню - подключить там же onOptionsItemSelected() -->
    <item
        android:id="@+id/search__main_menu"
        android:orderInCategory="10"
        android:title="@string/btnGlobalNotesSearch"
        android:icon="@android:drawable/ic_menu_search"
        app:actionViewClass="androidx.appcompat.widget.SearchView"
        app:showAsAction="always" />
    <item
        android:id="@+id/add_note__main_menu"
        android:orderInCategory="20"
        android:title="@string/btnAddNewNote"
        android:icon="@android:drawable/ic_menu_add"
        app:showAsAction="ifRoom" />
    <item
        android:id="@+id/list_view_choice__main_menu"
        android:orderInCategory="30"
        android:title="@string/btnListViewChoiceMainMenu"
        app:showAsAction="ifRoom" />
    <item android:id="@+id/more__main_menu"
        android:orderInCategory="40"
        android:title="@string/btnMoreMainMenu"
        app:showAsAction="never">
        <menu>
            <item android:id="@+id/some_item"
                android:orderInCategory="10"
                android:title="~ New Menu Item ~"
                android:icon="@android:drawable/ic_menu_edit"
                tools:ignore="HardcodedText" />
        </menu>
    </item>
</menu>