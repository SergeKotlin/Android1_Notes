<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="15dp"
    app:cardElevation="3dp">

    <!--  Как и у NestedScrollView - у CardView м.б лишь один ребёнок.
          Т.е наполнение стоит заворачивать в какой-то общий View-элемент  -->

    <!--  Элемент списка м.б любой сложности - однако, кроме фрагментов. Они не допускаются  -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/listItemTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>