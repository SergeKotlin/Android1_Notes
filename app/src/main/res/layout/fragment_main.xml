<?xml version="1.0" encoding="utf-8"?>
<!-- Это макет фрагмента для списка заметок -->
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="MainFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_notes_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@layout/list_item"/>
    <!--  В RecyclerView строенный скроллинг, внешний скроллинг будем с ним
     конфликтовать. Иначе отключаем android:nestedScrollingEnabled="false"  -->
    <!--  ! Но тогда перестают работать методы recyclerView.scrollToPosition(),
            .smoothScrollToPosition() и не только  -->

</FrameLayout>