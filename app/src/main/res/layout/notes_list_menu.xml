<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="end">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/noteMenu">
        <ImageButton
            android:id="@+id/buttonSearchNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btnSearchNote"
            style="@style/noteMenu"
            android:src="@android:drawable/ic_menu_search" />
        <ImageButton
            android:id="@+id/buttonAddNewNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btnAddNewNote"
            style="@style/noteMenu"
            android:src="@android:drawable/ic_menu_add" />
        <!--        -->
        <ImageButton
            android:id="@+id/buttonSortNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/btnSortNotes"
            style="@style/noteMenu"
            android:src="@android:drawable/ic_menu_sort_alphabetically" />
    </LinearLayout>
</TableRow>